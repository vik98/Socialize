<% include ../partials/header %>
<style media="screen">
  body{
    padding-top: 5%;
  }
</style>
<div class="container">
<header class="jumbotron">
  <div class="container text-center">
    <h1> Add a new Comment for <kbd><%= post.uname %>'s</kbd> Post </h1>
    <p> Fill in the required attributes </p>
  </div>
</header>
<div style="margin: 0 auto; width: 30%;">
<form action="/posts/<%= post._id %>/comments" method="POST">
  <div class="form-group">
    <input class="form-control" type="text" name="text" placeholder="comment">
  </div>
  <div class="form-group">
    <input class="form-control" type="text" name="uname" placeholder="username">
  </div>
  <div class="form-group">
    <button class="btn btn-default btn-lg btn-block">Submit</button>
  </div>
  <div class="form-group">
    <a href="/posts" class="btn btn-primary btn-block">Go back</a>
  </div>
</form>
</div>
<% include ../partials/footer %>
</div>
