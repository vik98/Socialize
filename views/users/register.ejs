<% include ../partials/header %>
<style media="screen">
  body{
    padding-top: 5%
  }
</style>
<div class="container">
<header class="jumbotron">
  <div class="container text-center">
    <h1> Register Page </h1>
    <p> Fill in the required attributes </p>
  </div>
</header>
<div style="margin: 0 auto; width: 30%;">
<form action="/users/register" method="POST">
  <div class="form-group">
    <input class="form-control" type="text" name="name" placeholder="Name">
  </div>
  <div class="form-group">
    <input class="form-control" type="text" name="uname" placeholder="Username">
  </div>
  <div class="form-group">
    <input class="form-control" type="password" name="password" placeholder="Type your password">
  </div>
  <div class="form-group">
    <input class="form-control" type="text" name="img" placeholder="Paste image url">
  </div>
  <div class="form-group">
    <button class="btn btn-default btn-lg btn-block">Submit</button>
  </div>
</form>
</div>


